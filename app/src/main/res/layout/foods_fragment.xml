<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.foods.FoodsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_layout"
        android:gravity="center"
        android:background="@drawable/seach_layout"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:orientation="horizontal">
        <com.android.dia.views.PoppinsRegularEditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="12sp"
            android:layout_weight="2"
            android:id="@+id/search_edit_text"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="@drawable/selected_type"
                android:layout_marginEnd="5dp"
                android:id="@+id/position_btn"/>
            <com.android.dia.views.PoppinsRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position"
                android:layout_marginEnd="5dp"
                android:textSize="12sp"
                android:id="@+id/position_text_view"/>
            <TextView
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginEnd="5dp"
                android:id="@+id/name_btn"/>
            <com.android.dia.views.PoppinsRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="12sp"
                android:id="@+id/food_name_text_view"/>

        </LinearLayout>
    </LinearLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_layout"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="-5dp"
        android:id="@+id/refresh_layout">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/food_recycler_view"/>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</RelativeLayout>